{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://utopy.dev/schemas/abi/v1/call.aprender.json",
  "type": "object",
  "required": ["diccionario"],
  "properties": {
    "diccionario": {
      "type": "object",
      "description": "mapa símbolo → etiqueta/semántica",
      "additionalProperties": { "type": "string" }
    },
    "intents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string" },
          "requiere": { "type": "array", "items": { "type": "string" } },
          "meta": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
